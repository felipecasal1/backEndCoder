<h1>Tu carrito</h1>

{{#if cart.products.length}}
  <ul>
    {{#each cart.products}}
      <li>
        <strong>{{product.title}}</strong> - ${{product.price}} x {{quantity}} = ${{multiply product.price quantity}}
        
        <!-- Formulario para eliminar este producto -->
        <form action="/api/carts/{{../cart._id}}/products/{{product._id}}?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit">Eliminar</button>
        </form>
      </li>
    {{/each}}
  </ul>
  <hr />
  <p><strong>Total:</strong> ${{sumTotal cart.products}}</p>

  <!-- Formulario para vaciar carrito -->
  <form action="/api/carts/{{cart._id}}?_method=DELETE" method="POST">
    <button type="submit">Vaciar carrito</button>
  </form>

  <a href="/">Seguir comprando</a>
{{else}}
  <p>Tu carrito está vacío.</p>
  <a href="/">Ir a productos</a>
{{/if}}